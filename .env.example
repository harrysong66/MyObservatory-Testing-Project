# Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# APPIUM SERVER CONFIGURATION
# ============================================
# Options: local, docker
APPIUM_SERVER_TYPE=local

# Local Appium Server
APPIUM_LOCAL_HOST=127.0.0.1
APPIUM_LOCAL_PORT=4723

# Docker Appium Server
APPIUM_DOCKER_HOST=localhost
APPIUM_DOCKER_PORT=4723

# ============================================
# ANDROID CONFIGURATION
# ============================================
ANDROID_PLATFORM_NAME=Android
ANDROID_PLATFORM_VERSION=13.0
ANDROID_DEVICE_NAME=Android Emulator
ANDROID_UDID=emulator-5554
# Options: real, emulator
ANDROID_DEVICE_TYPE=emulator

# MyObservatory App Configuration
ANDROID_APP_PACKAGE=hko.MyObservatory_v1_0
ANDROID_APP_ACTIVITY=.MainActivity
ANDROID_APP_PATH=/path/to/myobservatory.apk

# Android Capabilities
ANDROID_AUTOMATION_NAME=UiAutomator2
ANDROID_AUTO_GRANT_PERMISSIONS=true
ANDROID_NO_RESET=false
ANDROID_FULL_RESET=false

# ============================================
# iOS CONFIGURATION
# ============================================
IOS_PLATFORM_NAME=iOS
IOS_PLATFORM_VERSION=16.0
IOS_DEVICE_NAME=iPhone 14
IOS_UDID=auto
# Options: real, simulator
IOS_DEVICE_TYPE=simulator

# MyObservatory App Configuration
IOS_BUNDLE_ID=hk.gov.hko.MyObservatory
IOS_APP_PATH=/path/to/MyObservatory.app

# iOS Capabilities
IOS_AUTOMATION_NAME=XCUITest
IOS_AUTO_ACCEPT_ALERTS=true
IOS_NO_RESET=false
IOS_FULL_RESET=false

# ============================================
# API CONFIGURATION
# ============================================
# Hong Kong Observatory API
API_BASE_URL=https://data.weather.gov.hk
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1

# ============================================
# TEST CONFIGURATION
# ============================================
# Platform to test: android, ios
TEST_PLATFORM=android

# Implicit wait time (seconds)
IMPLICIT_WAIT=10

# Explicit wait time (seconds)
EXPLICIT_WAIT=20

# Screenshot on failure
CAPTURE_SCREENSHOT=true
SCREENSHOT_DIR=reports/screenshots

# Test data directory
TEST_DATA_DIR=tests/testdata

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_DIR=logs

# ============================================
# REPORT CONFIGURATION
# ============================================
REPORT_DIR=reports
REPORT_FORMAT=html
